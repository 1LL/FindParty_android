<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_course_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ga.findparty.findparty.activity.AddCourseBoardActivity"
    android:background="@color/background_color"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_above="@+id/submit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <!--<Button-->
            <!--android:id="@+id/category"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="35dp"-->
            <!--android:background="@color/dark_gray"-->
            <!--android:text="카테고리를 선택하세요."-->
            <!--android:textColor="@color/white"-->
            <!--/>-->

            <!-- 소개 메시지 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    >

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="모집내용"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="내용을 자세하게 작성해주세요."
                        android:textSize="12sp"
                        android:textColor="@color/profile_content"
                        app:met_minCharacters="1"
                        app:met_singleLineEllipsis="false"
                        app:met_primaryColor="@color/profile_content"
                        />

                </LinearLayout>

                <!-- 기간 입력 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    >

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="활동기간"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />


                    <TextView
                        android:id="@+id/duration_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="선택"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        />

                </LinearLayout>

                <!-- 관심분야 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    >

                    <TextView
                        android:id="@+id/tv_interest"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="관심분야"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/interest_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/interest_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="선택"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:gravity="center"
                                />

                        </RelativeLayout>


                    </FrameLayout>


                </LinearLayout>

                <!-- 분야 추가 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    >

                    <TextView
                        android:id="@+id/tv_field"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="분야"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/li_add_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                        </LinearLayout>

                        <TextView
                            android:id="@+id/add_field_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/li_add_field"
                            android:text="추가하기"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <!-- 필드 종료 -->


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dark_gray"
        android:layout_alignParentBottom="true"
        android:text="모집하기"
        android:textColor="@color/white"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 모집"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

</RelativeLayout>
