<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ga.findparty.findparty.activity.AddHistoryActivity"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:layout_margin="20dp"
        android:clickable="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/save_btn"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제목을 입력해주세요."
                        android:textSize="12sp"
                        android:textColor="@color/profile_content"
                        app:met_minCharacters="1"
                        app:met_singleLineEllipsis="true"
                        app:met_primaryColor="@color/profile_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="내용"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edit_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="내용을 입력해주세요."
                        android:textSize="12sp"
                        android:textColor="@color/profile_content"
                        app:met_minCharacters="1"
                        app:met_singleLineEllipsis="true"
                        app:met_primaryColor="@color/profile_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_reference"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="참고자료"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/li_reference_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                        </LinearLayout>

                        <TextView
                            android:id="@+id/add_reference_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/li_reference_field"
                            android:text="추가하기"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="날짜"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />


                    <TextView
                        android:id="@+id/date_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="선택"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/li_charge_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_charge"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="담당자"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />


                    <TextView
                        android:id="@+id/charge_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="선택"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_participant_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/dark_gray"
            android:text="저장하기"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</FrameLayout>
