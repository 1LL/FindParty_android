<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_select_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ga.findparty.findparty.activity.SelectTimeActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/save_btn"
        android:layout_below="@+id/toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                >

                <LinearLayout
                    android:id="@+id/li_time_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="시간"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_mon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_mon"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="월요일"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_tue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_tue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="화요일"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_wed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_wed"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="수요일"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_thu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_thu"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="목요일"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_fri"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_fri"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="금요일"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/board_title"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="저장하기"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:layout_height="@dimen/custom_actionbar_size"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불가능한 시간"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_actionbar_title_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

</RelativeLayout>
