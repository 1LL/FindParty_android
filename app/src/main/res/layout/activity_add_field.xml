<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_field"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="ga.findparty.findparty.activity.AddFieldActivity"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submit"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="40dp"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="분야명"
                    android:textSize="12sp"
                    android:textColor="@color/profile_title"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="분야명을 입력해주세요.(ex. 개발자)"
                    android:textSize="12sp"
                    android:textColor="@color/profile_content"
                    android:layout_marginRight="10dp"
                    app:met_minCharacters="1"
                    app:met_singleLineEllipsis="true"
                    app:met_primaryColor="@color/profile_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="40dp"
                >

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="인원"
                    android:textSize="12sp"
                    android:textColor="@color/profile_title"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="인원을 입력해주세요."
                    android:textSize="12sp"
                    android:textColor="@color/profile_content"
                    android:inputType="number"
                    android:layout_marginRight="10dp"
                    app:met_minCharacters="1"
                    app:met_singleLineEllipsis="true"
                    app:met_primaryColor="@color/profile_content"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/dark_gray"
            android:text="추가하기"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</RelativeLayout>
